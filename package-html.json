{
  "name": "@liquid-glass/html",
  "version": "1.0.0",
  "description": "Liquid Glass - Beautiful frosted glass UI with jelly physics, magnetic following, and cursor lights (HTML/JavaScript version)",
  "main": "index.html",
  "scripts": {
    "start": "electron .",
    "build": "npm run package",
    "package": "electron-builder",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "liquid-glass",
    "frosted-glass",
    "glassmorphism",
    "jelly-physics",
    "elastic-ui",
    "magnetic-ui",
    "cursor-effects",
    "electron",
    "html",
    "javascript",
    "ui-component",
    "glass-effect",
    "backdrop-filter",
    "magnifying-lens"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/liquid-glass-html"
  },
  "bugs": {
    "url": "https://github.com/yourusername/liquid-glass-html/issues"
  },
  "homepage": "https://github.com/yourusername/liquid-glass-html#readme",
  "files": [
    "index.html",
    "smonthl-api.js",
    "glass-config.json",
    "README.md"
  ],
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.liquidglass.html",
    "productName": "Liquid Glass HTML",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "smonthl-api.js",
      "glass-config.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
