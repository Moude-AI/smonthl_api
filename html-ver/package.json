{
  "name": "smonthl",
  "version": "2.0.4-beta",
  "description": "SmonthlAPI - Beautiful frosted glass UI with liquid glass text, extended creative syntax, external imports (HTML/JavaScript version)",
  "main": "smonthl-api.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "npm run package",
    "package": "electron-builder",
    "prepublishOnly": "echo 'Ready to publish'",
    "publish:npm": "npm publish --access public"
  },
  "keywords": [
    "smonthl",
    "smonthl-api",
    "liquid-glass",
    "frosted-glass",
    "glassmorphism",
    "jelly-physics",
    "elastic-ui",
    "magnetic-ui",
    "cursor-effects",
    "electron",
    "html",
    "javascript",
    "ui-component",
    "glass-effect",
    "backdrop-filter",
    "magnifying-lens",
    "configuration-api"
  ],
  "author": "Arthurc1Moude <arch_cheng@163.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Moude-AI/smonthl_api.git",
    "directory": "html-ver"
  },
  "bugs": {
    "url": "https://github.com/Moude-AI/smonthl_api/issues"
  },
  "homepage": "https://github.com/Moude-AI/smonthl_api#readme",
  "files": [
    "index.html",
    "smonthl-api.js",
    "glass-config.json",
    "README.md"
  ],
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.liquidglass.html",
    "productName": "Liquid Glass HTML",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "smonthl-api.js",
      "glass-config.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
