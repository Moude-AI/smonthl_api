{
  "name": "@liquid-glass/react",
  "version": "1.0.0",
  "description": "Liquid Glass - Beautiful frosted glass UI with jelly physics, magnetic following, and cursor lights (React/TypeScript version)",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "NODE_ENV=development electron .",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:electron\"",
    "build": "tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron .",
    "preview": "vite preview",
    "test": "jest",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "liquid-glass",
    "frosted-glass",
    "glassmorphism",
    "jelly-physics",
    "elastic-ui",
    "magnetic-ui",
    "cursor-effects",
    "react",
    "typescript",
    "react-component",
    "ui-component",
    "glass-effect",
    "backdrop-filter",
    "magnifying-lens",
    "tsx",
    "hooks"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/liquid-glass-react"
  },
  "bugs": {
    "url": "https://github.com/yourusername/liquid-glass-react/issues"
  },
  "homepage": "https://github.com/yourusername/liquid-glass-react#readme",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "build": {
    "appId": "com.liquidglass.react",
    "productName": "Liquid Glass React",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "glass-config.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
